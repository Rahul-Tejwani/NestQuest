<% layout("/layouts/boilerplate") %>
<div class="row mt-4">
  <h2 class="col-6 offset-4 my-3">Register on NestQuest</h2>
  <div class="col-6 offset-3 mt-4">
    <form action="/signup" , method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Username is a required field</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          id="title"
          class="form-control"
          required
        />
        <div class="invalid-feedback">
          Email is a required field and it should end with @xyz.com
        </div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          id="title"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Password is a required field</div>
      </div>
      <div class="d-grid col-2 offset-5 my-5">
        <button class="btn btn-dark add-btn">Sign Up</button>
      </div>
    </form>
  </div>
</div>
