<% layout("/layouts/boilerplate") %>
<div class="row mt-5">
  <h2 class="col-6 offset-4 mt-2 mb-3">Login to NestQuest Portal</h2>
  <div class="col-6 offset-3">
    <form action="/login" , method="POST" class="needs-validation" novalidate>
      <div class="mt-4 mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Username is a required field</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          id="title"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Password is a required field</div>
      </div>
      <div class="d-grid col-2 offset-5 my-5">
        <button class="btn btn-dark add-btn">Login</button>
      </div>
    </form>
  </div>
</div>
